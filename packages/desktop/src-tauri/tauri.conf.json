{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Mac Dash",
  "version": "1.0.9",
  "identifier": "com.talhaorak.macdash",
  "build": {
    "beforeDevCommand": "cd ../../client && bunx --bun vite --port 5173",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "cd ../../client && bunx --bun vite build",
    "frontendDist": "../../../dist/client"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Mac Dash",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "acceptFirstMouse": true,
        "decorations": true,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "Mac Dash"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "dmg",
      "app"
    ],
    "copyright": "\u00a9 2026 Talha Orak. All rights reserved.",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "13.0",
      "signingIdentity": null,
      "entitlements": null
    },
    "resources": [
      "about.html"
    ]
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://github.com/talhaorak/mac-dash/releases/latest/download/latest.json"
      ],
      "dialog": false,
      "pubkey": ""
    }
  }
}
