{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-config-schema/schema.json",
  "productName": "Mac Dash",
  "version": "1.0.6",
  "identifier": "com.talhaorak.macdash",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../../../dist/client"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Mac Dash",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": false,
        "transparent": false,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "trayIcon": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "tooltip": "Mac Dash"
    },
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "13.0",
      "signingIdentity": null,
      "entitlements": null
    }
  },
  "plugins": {
    "global-shortcut": {
      "shortcuts": ["CmdOrCtrl+Shift+D"]
    },
    "autostart": {
      "macOS": {
        "launchAtLogin": false
      }
    }
  }
}
